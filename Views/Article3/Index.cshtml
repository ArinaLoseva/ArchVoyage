<script>
    function initMap() {
        const routePoints = [
            { lat: 53.9045, lng: 27.5615, title: "Минск (начало маршрута)" },
            { lat: 53.7400, lng: 27.9500, title: "Смиловичи - Дворцово-парковый комплекс Монюшко" },
            { lat: 53.9833, lng: 25.3667, title: "Жемыславль - Усадьба Уместовских" },
            { lat: 53.6000, lng: 25.3500, title: "Желудок - Дворец Четвертинских" },
            { lat: 53.0833, lng: 26.2667, title: "Грушевка - Усадьба Рейтанов" },           
            { lat: 52.2167, lng: 26.0167, title: "Молодово - Каплица Скирмунтов" },
            { lat: 52.2000, lng: 25.1500, title: "Закозель - Часовня Ожешко" },
            { lat: 53.1833, lng: 24.0167, title: "Большая Берестовица - Костел Посещения" }
        ];

        const map = new google.maps.Map(document.getElementById("routeMap"), {
            zoom: 7,
            center: { lat: 53.5, lng: 26.0 },
            mapTypeId: "terrain",
            styles: [
                {
                    featureType: "poi",
                    stylers: [{ visibility: "off" }]
                }
            ]
        });

        const routePath = new google.maps.Polyline({
            path: routePoints.map(point => ({ lat: point.lat, lng: point.lng })),
            geodesic: true,
            strokeColor: "#404A36",
            strokeOpacity: 1.0,
            strokeWeight: 4
        });
        routePath.setMap(map);

        routePoints.forEach((point, index) => {
            new google.maps.Marker({
                position: { lat: point.lat, lng: point.lng },
                map: map,
                title: `${index + 1}. ${point.title}`,
                label: {
                    text: (index + 1).toString(),
                    color: "white",
                    fontSize: "12px",
                    fontWeight: "bold"
                },
                icon: {
                    url: "https://maps.google.com/mapfiles/ms/icons/red-dot.png",
                    labelOrigin: new google.maps.Point(11, 11)
                }
            });
        });

        const infoWindow = new google.maps.InfoWindow();

        routePoints.forEach((point, index) => {
            const marker = new google.maps.Marker({
                position: { lat: point.lat, lng: point.lng },
                map: map,
                title: point.title
            });

            marker.addListener("click", () => {
                infoWindow.setContent(`<strong>${index + 1}. ${point.title}</strong>`);
                infoWindow.open(map, marker);
            });
        });
    }
</script>