@inject IConfiguration configuration
@{
    var siteKey = configuration["reCaptchaSettings:SiteKey"];
}

@model Forms

<style>
    .main_block {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 70vh;
        background-color: white;
        padding: 20px;
    }

    .registration {
        width: 400px;
        padding: 40px;
        border-radius: 30px;
        background-color: #E5EAE0;
        display: flex;
        flex-direction: column;
        align-items: center;
        font-weight: 100;
    }

        .registration h3 {
            color: #404A36;
            font-size: 20px;
            font-family: 'Inter';
            font-weight: 600;
            margin-bottom: 30px;
            margin-top: 20px;
            text-align: center;
        }

        .registration input {
            width: 100%;
            height: 36px;
            padding: 0 15px;
            background-color: white;
            border: 0px solid #ddd;
            border-radius: 20px;
            font-family: 'Inter';
            font-size: 14px;
            margin-bottom: 15px; 
        }

            .registration input:focus {
                outline: none;
                border-color: #404A36;
            }

            .registration input::placeholder {
                color: #939393;
            }


    .btn-container {
        width: 100%;
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .btn-primary {
        width: 180px;
        height: 36px;
        background-color: #404A36;
        color: white;
        border: none;
        border-radius: 20px;
        font-family: 'Inter';
        font-size: 14px;
        font-weight: 200;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #333D29;
        }

    form {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

</style>

<div class="main_block">
    <div class="registration">
        <h3>Заполните свою анкету путешественника</h3>

        <form id="registrationForm" method="POST" asp-controller="FormCreater" asp-action="Create" onsubmit="return onSubmit(event)">
            <input type="hidden" asp-for="UserEmail" />
            <input type="hidden" asp-for="RegistrationDate" />
            <input type="text" placeholder="ФИО" asp-for="FullName">
            <input type="text" placeholder="Ваш город" asp-for="City">
            <input type="text" placeholder="Личный транспорт " asp-for="Transport">
            <input type="text" placeholder="Контактная информация" asp-for="Contacts">
            <input type="text" placeholder="Расскажите о себе" asp-for="PersonalInformation">
            <input type="text" placeholder="Прямая сслыка на фото" asp-for="PhotoLink">

            <div class="btn-container">
                <button type="submit" class="btn-primary">Сохранить</button>
            </div>

        </form>
    </div>
</div>
