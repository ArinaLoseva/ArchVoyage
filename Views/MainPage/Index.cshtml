@{
    ViewData["Title"] = "Main Page";
}

<style>
    .photo_block {
        display: flex;
        flex-direction: column;
        gap: 20px;
        max-width: 840px; /* Ширина контейнера */
        margin: 0 auto; /* Центрирование */
        padding-bottom: 50px;
        align-self: center;
    }

    .photo_row {
        display: flex;
        gap: 20px;
    }

    .photo_block1 {
        width: 410px;
        height: 300px;
        border-top-left-radius: 60px;
        border-bottom-left-radius: 60px;
        border-bottom-right-radius: 60px;
        background-color: black;
        align-content: center;
    }

    .photo_block2 {
        width: 410px;
        height: 300px;
        border-top-right-radius: 60px;
        border-bottom-left-radius: 60px;
        background-color: black;
    }

    .photo_block3 {
        width: 290px;
        height: 200px;
        border-top-left-radius: 60px;
        border-top-right-radius: 60px;
        border-bottom-right-radius: 60px;
        background-color: black;
        align-content: center;
    }

    .photo_block4 {
        width: 530px;
        height: 200px;
        border-radius: 60px;
        background-color: black;
        align-content: center;
    }

    .reg_block {
        width: 100%;
        height: 340px;
        margin: 0 auto; /* Центрирование блока */
        background-color: #E5EAE0;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-sizing: border-box;
    }

        .reg_block h2 {
            margin-top: 40px;
            font-size: 40px;
            color: #404A36;
            font-family: 'Inter';
            margin-bottom: 20px;
            font-weight: 500;
        }

    .reg_text {
        margin-bottom: 20px;
    }

        .reg_text p {
            color: #404A36;
        }

    .reg_button {
        background-color: #404A36;
        color: white;
        border: none;
        border-radius: 20px;
        width: 210px;
        height: 33px; 
        cursor: pointer;
        transition: background-color 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .reg_button:hover {
            background-color: #2d3325; 
        }

    .info_block{
        background-color: #333D29;
        width: 100%;
        height: auto;
        margin: 0 auto; 
        display: flex;
        flex-direction: column;
        align-items: center;
        box-sizing: border-box;
    }

    .photo1{
        width: 530px;
        height: 330px;
        border-top-left-radius: 200px;
        background-color: black;
    }

    .photo2 {
        width: 610px;
        height: 450px;
        border-top-right-radius: 200px;
        border-bottom-right-radius: 200px;
        background-color: black;
    }

    .photo3 {
        width: 570px;
        height: 460px;
        border-top-right-radius: 200px;
        border-bottom-left-radius: 200px;
        background-color: black;
    }

    .info_block h3{
        font-size: 24px;
        color: white;
        font-family: 'Inter';
        font-weight: 400;
    }

    .info_block p {
        color: #D4DABD;
    }

    .info_block1, .info_block2, .info_block3{
        display: flex;
        gap: 80px;
        align-items: center;
        margin-bottom: 50px;
        margin-top: 50px;
    }

    .info_block1{
        margin-top: 100px;
    }

    .info_button {
        background-color: white;
        color: #404A36;
        border: none;
        border-radius: 60px;
        width: 580px;
        height: 60px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 500;
        margin-top: 80px;
    }

        .info_button:hover {
            background-color: #CCCCCC;
            font-weight: 500;
        }

   .info_block4 p{
